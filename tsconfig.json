{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["ES2020", "dom"],
    "paths": {
      "@base/*": ["base/*"],
      "@data/*": ["data/*"],
      "@models/*": ["models/*"],
      "@helpers/*": ["helpers/*"],
      "@ui/*": ["ui/*"],
      "@components/*": ["ui/components/*"],
      "@locators/*": ["ui/locators/*"],
      "@pages/*": ["ui/pages/*"]
    }
  },
  "include": ["**/*.ts"]
}
